<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.merigo.solana_wallet_adapter_android">
    <queries>
      <intent>
        <action android:name="android.intent.action.VIEW" />
        <data android:scheme="solana-wallet" />
      </intent>
      <!-- Phantom wallet -->
      <intent>
        <action android:name="android.intent.action.VIEW" />
        <data android:scheme="phantom" />
      </intent>
      <intent>
        <action android:name="android.intent.action.VIEW" />
        <data android:scheme="https" android:host="phantom.app" />
      </intent>
      <package android:name="app.phantom" />
      <!-- Solflare wallet -->
      <intent>
        <action android:name="android.intent.action.VIEW" />
        <data android:scheme="solflare" />
      </intent>
      <intent>
        <action android:name="android.intent.action.VIEW" />
        <data android:scheme="https" android:host="solflare.com" />
      </intent>
      <package android:name="com.solflare.mobile" />
    </queries>
</manifest>
